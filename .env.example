# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/shipping_aggregator"
REDIS_URL="redis://localhost:6379"

# Carrier API Keys
FEDEX_API_KEY="your_fedex_api_key"
FEDEX_SECRET_KEY="your_fedex_secret_key"
UPS_API_KEY="your_ups_api_key"
UPS_SECRET_KEY="your_ups_secret_key"
USPS_API_KEY="your_usps_api_key"
DHL_API_KEY="your_dhl_api_key"

# Authentication
JWT_SECRET="your_jwt_secret_key_here"
SESSION_SECRET="your_session_secret_here"

# Postmark Email Service
POSTMARK_API_TOKEN="your_postmark_api_token_here"
POSTMARK_FROM_EMAIL="hello@shipnode.io"

# Unsubscribe Security
UNSUBSCRIBE_SECRET="your_secure_random_string_here"

# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN="your_cloudflare_api_token_here"
CLOUDFLARE_ZONE_ID="your_zone_id_for_shipnode_io"
CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id"

# Google Services
GOOGLE_SITE_VERIFICATION="your_google_verification_code"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_SITE_URL="https://shipnode.io"

# Webhook URLs (for tracking updates)
WEBHOOK_SECRET="your_webhook_secret"
WEBHOOK_BASE_URL="https://your-domain.com/webhooks"

# Rate Limiting & Caching
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Application
NODE_ENV="development"
PORT=3000
CORS_ORIGIN="http://localhost:3000"

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH="./uploads"

# Payment Processing (if handling payments)
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"